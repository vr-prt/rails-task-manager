<div class="task-header">
  <h1 class="mb-3"><%= @task.title %></h1>
  <button type="button" class="btn btn-secondary"><%= link_to 'Edit task', edit_task_path(@task) %></button>
</div>

<div class="alert alert-secondary" role="alert">
  <%=@task.details %>
</div>

<div class="task-completion mb-3">
  <% if @task.completed %>
    <input type="checkbox" checked>
    <p>This task is completed.</p>
  <% else %>
    <input type="checkbox">
    <p>This task is not completed yet.</p>
  <% end %>
</div>

<hr>

<%= link_to 'Back to list', tasks_path, class: "btn btn-light mt-3" %>
